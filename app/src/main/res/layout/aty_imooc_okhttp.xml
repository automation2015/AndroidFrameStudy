<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/title_bar"/>
    <Button
        android:id="@+id/btn_do_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="doget请求"/>
    <Button
        android:id="@+id/btn_do_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="doPost请求"/>
    <Button
        android:id="@+id/btn_do_post_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dopost请求String"/>
    <Button
        android:id="@+id/btn_do_post_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dopost上传文件"/>
    <Button
        android:id="@+id/btn_do_post_uploadfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dopost上传文件和参数"/>
    <Button
        android:id="@+id/btn_do_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dopost下载图片文件"/>
    <Button
        android:id="@+id/btn_do_download_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dopost下载图片文件"/>
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center"
        android:scaleType="centerCrop"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_result"
        android:text="显示请求数据"/>
        </LinearLayout>
    </ScrollView>
